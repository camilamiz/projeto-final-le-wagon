<div class="container">
  <div class="wrapper-gray">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <div class="card-icon">
            <%= image_tag "represent_icon.png", alt: "represent", width: 300 %>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="card-text">
