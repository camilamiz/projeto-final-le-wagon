#banner {
  color: white;
  text-align: center;
  height: 100vh;
  background-size: cover !important;
  background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.4) 50%), url(<%= asset_url 'banner.jpg' %>);
  display: flex;
  align-items: center;
  justify-content: center;
}

#banner p {
  font-size: 25px;
  font-weight: lighter;
  color: rgba(255, 255, 255, 0.9);
  opacity: 0.8;
  margin-bottom: 30px;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 20px 30px;
  line-height: 50px;
  border-radius: 50px;
}
