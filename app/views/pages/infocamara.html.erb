              <div class="front-flip">
                <%= image_tag "law_icon.png", alt: "law", width: 200 %>
              </div>
              <div class="back-flip">
                Leis
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="card-flip">
            <div class="content-flip">
              <div class="front-flip">
                <%= image_tag "oversee_icon.png", alt: "oversee", width: 200 %>
              </div>
              <div class="back-flip">
                Fiscalizar
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

