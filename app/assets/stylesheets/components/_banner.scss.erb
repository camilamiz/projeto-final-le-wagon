#banner {
  color: white;
  text-align: center;
  height: 100vh;
  background-size: cover !important;
  background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5) 50%), url(<%= asset_url 'banner.jpg' %>);
  display: flex;
  align-items: center;
  justify-content: center;
}

#banner p {
  font-size: 25px;
  font-weight: lighter;
  color: rgb(255, 255, 255);
  opacity: 0.6;
  margin-bottom: 30px;
}
